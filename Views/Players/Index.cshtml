@model IEnumerable<asp_test.Models.Player>

<div class="flex flex-col flex-1 overflow-hidden gap-4 p-10 max-md:p-4">
    <h1 class="text-center font-extrabold text-4xl">Players list</h1>

    <div class="flex w-full items-center justify-center py-2">
        <a class="bg-primary-500 py-2 px-10 rounded-md font-medium hover:opacity-80 transition-all duration-300" asp-action="Create">Add new player</a>
    </div>

    <div class="flex-1 w-full overflow-auto border border-primary-900 rounded-xl relative">
        <table class="flex-1 w-full table-fixed">
            <thead>
                <tr class="py-4 bg-primary-800 sticky top-0">
                    <th class="w-32 sticky left-0 bg-primary-800">Name</th>
                    <th class="w-32">Position</th>
                    <th class="w-32">Dorsal</th>
                    <th class="w-32">Date of birth</th>
                    <th class="w-80">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var player in Model)
                {
                    <tr class="border-b border-primary-900 odd:bg-[rgb(5_10_26)] even:bg-[rgb(7_12_33)] hover:bg-[rgb(9_17_48)] transition-colors duration-150">
                        <td class="py-2 px-2 text-sm sticky left-0 bg-inherit">@player.Name</td>
                        <td class="py-2 px-2 text-sm">@player.Position</td>
                        <td class="py-2 px-2 text-sm text-center">@player.Number</td>
                        <td class="py-2 px-2 text-sm text-center">@player.Date.ToShortDateString()</td>
                        <td class="py-2 px-2 text-sm">
                            <div class="flex w-full justify-center gap-4">
                                <a 
                                    asp-action="Details" 
                                    asp-route-id="@player.Id"
                                    class="bg-primary-500 py-1 px-2 rounded-md font-medium hover:opacity-80 transition-all duration-300"
                                >Details</a>
                                <a 
                                    asp-action="Edit" 
                                    asp-route-id="@player.Id" 
                                    class="bg-amber-500 py-1 px-2 rounded-md font-medium hover:opacity-80 transition-all duration-300"
                                >Edit</a>
                                <a 
                                    asp-action="Delete" 
                                    asp-route-id="@player.Id" 
                                    class="bg-rose-500 py-1 px-2 rounded-md font-medium hover:opacity-80 transition-all duration-300"
                                >Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>