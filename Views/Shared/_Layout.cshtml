<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Football App</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/asp_test.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="w-screen h-screen flex flex-col">
        <nav class="w-full px-10 py-6 flex items-center justify-between z-20 bg-gray-900 max-md:px-4 shadow-xl shadow-primary-950/20">
            <div class="flex gap-6">
                <a
                    href="/"
                    class="p-2 h-max border rounded-xl transition-all duration-300 flex items-center gap-2 text-sm bg-gray-100 border-primary-200 !text-primary-400 hover:bg-primary-500 hover:border-primary-500 hover:scale-125 group"
                >
                    <div class="aspect-square">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                            class="icon icon-tabler icons-tabler-filled icon-tabler-trophy text-primary-500 group-hover:text-white transition-all duration-300"
                        >
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M17 3a1 1 0 0 1 .993 .883l.007 .117v2.17a3 3 0 1 1 0 5.659v.171a6.002 6.002 0 0 1 -5 5.917v2.083h3a1 1 0 0 1 .117 1.993l-.117 .007h-8a1 1 0 0 1 -.117 -1.993l.117 -.007h3v-2.083a6.002 6.002 0 0 1 -4.996 -5.692l-.004 -.225v-.171a3 3 0 0 1 -3.996 -2.653l-.003 -.176l.005 -.176a3 3 0 0 1 3.995 -2.654l-.001 -2.17a1 1 0 0 1 1 -1h10zm-12 5a1 1 0 1 0 0 2a1 1 0 0 0 0 -2zm14 0a1 1 0 1 0 0 2a1 1 0 0 0 0 -2z" />
                        </svg>
                    </div>
                    <p class="font-bold text-primary-500 group-hover:text-white transition-all duration-300 max-sm:hidden">Tournaments</p>
                </a>
                <a
                    href="/Players"
                    class="p-2 h-max border rounded-xl transition-all duration-300 flex items-center gap-2 text-sm bg-gray-100 border-primary-200 !text-primary-400 hover:bg-primary-500 hover:border-primary-500 hover:scale-125 group"
                >
                    <div class="aspect-square">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            strokeWidth="2"
                            strokeLinecap="round"
                            strokeLinejoin="round"
                            class="icon icon-tabler icons-tabler-outline icon-tabler-man text-primary-500 group-hover:text-white transition-all duration-300"
                        >
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M10 16v5" />
                            <path d="M14 16v5" />
                            <path d="M9 9h6l-1 7h-4z" />
                            <path d="M5 11c1.333 -1.333 2.667 -2 4 -2" />
                            <path d="M19 11c-1.333 -1.333 -2.667 -2 -4 -2" />
                            <path d="M12 4m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
                        </svg>
                    </div>
                    <p class="font-bold text-primary-500 group-hover:text-white transition-all duration-300 max-sm:hidden">Players</p>
                </a>
                <a
                    href="/Banner"
                    class="p-2 h-max border rounded-xl transition-all duration-300 flex items-center gap-2 text-sm bg-gray-100 border-primary-200 !text-primary-400 hover:bg-primary-500 hover:border-primary-500 hover:scale-125 group"
                >
                    <div class="aspect-square">
                        <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="currentColor"  class="icon icon-tabler icons-tabler-filled icon-tabler-flag-2 text-primary-500 group-hover:text-white transition-all duration-300"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M19 4a1 1 0 0 1 .993 .883l.007 .117v9a1 1 0 0 1 -.883 .993l-.117 .007h-13v6a1 1 0 0 1 -.883 .993l-.117 .007a1 1 0 0 1 -.993 -.883l-.007 -.117v-16a1 1 0 0 1 .883 -.993l.117 -.007h14z" /></svg>
                    </div>
                    <p class="font-bold text-primary-500 group-hover:text-white transition-all duration-300 max-sm:hidden">Banner</p>
                </a>
            </div>
        </nav>
        <main role="main" class="h-screen flex flex-col bg-gray-950 overflow-hidden">
            @RenderBody()
        </main>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
